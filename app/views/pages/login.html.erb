<h2>Login</h2>
<%= form_for :user, :url => {:action => "login"} do |f| %>
  <%= f.label "Username: " %><br /><%= f.text_field :username %><br />
  <%= f.label "Password: " %><br /><%= f.password_field :password %><br />
  <%= f.submit "Submit" %><br /><br /><br />
<% end %>
<%=link_to "View Public Page", :controller => "user_suggestions", :action => "index"%>
